<%- include("partials/header") %>

<div class="container mt-3">

    

    <div class="formStyle">
        
        <h2 class="text-center">Create New Campground</h2>

        <form class="createForm" action="/campgrounds" method="POST">
            <div class="form-group">
            <label for="name">Name</label>
            <input class="form-control" type="text" name="name" id="name">
            </div>
            <div class="form-group">
            <label for="image">Image</label>
            <input class="form-control" type="url" name="image" id="image">
            </div>
            <button type="submit" class="btn btn-primary btn-block">Create Campground</button>
        </form>

    </div>

    <br>
    <a href="/campgrounds">Go Back</a>

</div>

<%- include("partials/footer") %>